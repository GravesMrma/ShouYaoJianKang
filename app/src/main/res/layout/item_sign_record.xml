<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp9"
    android:paddingBottom="@dimen/dp9"
    android:paddingLeft="@dimen/dp14"
    android:paddingRight="@dimen/dp14"
    android:background="@drawable/sp_gary_5">

    <TextView
        android:id="@+id/tvText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="打卡获取健康币"
        android:textSize="@dimen/f12"
        android:textColor="@color/gray_66" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvText"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp2"
        android:text="2019.08.09"
        android:textSize="@dimen/f10"
        android:textColor="@color/gray_99" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tvDate"
        app:layout_constraintLeft_toRightOf="@id/tvDate"
        android:layout_marginLeft="@dimen/dp25"
        android:text="11:26:08"
        android:textSize="@dimen/f10"
        android:textColor="@color/gray_99" />

    <TextView
        android:id="@+id/tvNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="+45"
        android:textSize="@dimen/f17"
        android:textColor="@color/green_08"/>


</android.support.constraint.ConstraintLayout>