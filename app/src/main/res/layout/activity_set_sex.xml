<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.wuhanzihai.rbk.ruibeikang.activity.SetSexActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp90"
        android:text="选择以下信息，为您提供个性化服务！"
        android:textColor="@color/black"
        android:textSize="@dimen/f15" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp46"
        android:layout_marginRight="@dimen/dp46"
        android:layout_marginTop="@dimen/dp29"
        android:layout_marginBottom="@dimen/dp15"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvMan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dp10"
            android:gravity="center"
            android:drawableTop="@drawable/selector_man"
            android:text="帅哥"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/f13" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvWoman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dp10"
            android:drawableTop="@drawable/selector_woman"
            android:gravity="center"
            android:text="美女"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/f13" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp14"
        android:background="@drawable/sp_gary_5"
        android:drawableRight="@mipmap/mid_icon_xuanze"
        android:gravity="center_vertical"
        android:padding="@dimen/dp14"
        android:text="选择生日"
        android:textColor="@color/black_33"
        android:textSize="@dimen/f15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp14"
        android:layout_marginRight="@dimen/dp14"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvWeight"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/sp_gary_5"
            android:drawableRight="@mipmap/mid_icon_xuanze"
            android:gravity="center_vertical"
            android:padding="@dimen/dp14"
            android:text="选择体重"
            android:textColor="@color/black_33"
            android:textSize="@dimen/f15" />

        <Space
            android:layout_width="@dimen/dp14"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvHeight"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/sp_gary_5"
            android:drawableRight="@mipmap/mid_icon_xuanze"
            android:gravity="center_vertical"
            android:padding="@dimen/dp14"
            android:text="选择身高"
            android:textColor="@color/black_33"
            android:textSize="@dimen/f15" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btCommit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp14"
            android:layout_marginRight="@dimen/dp14"
            android:layout_marginBottom="@dimen/dp87"
            android:layout_alignParentBottom="true"
            style="@style/buttonStyle"
            android:text="下一步"/>

    </RelativeLayout>
</LinearLayout>
