<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/ivImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_ask"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginTop="@dimen/dp23"/>

    <TextView
        android:id="@+id/tvText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ivImg"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginTop="@dimen/dp23"
        android:layout_marginLeft="@dimen/dp17"
        android:textSize="@dimen/f13"
        android:textColor="@color/black_33"
        android:minLines="2"
        android:maxLines="2"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/dp3"
        android:text="提前预约临时有事可以调整预约的时间吗？会有另外的收费吗？"/>

    <TextView
        android:id="@+id/tvText1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvText"
        app:layout_constraintLeft_toRightOf="@id/ivImg"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginTop="@dimen/dp13"
        android:layout_marginLeft="@dimen/dp17"
        android:textColor="@color/gray_99"
        android:textSize="@dimen/f12"
        android:text="预约陪诊与挂号成功不等同，以挂号成功信息为主。预约陪诊与挂号成功不等同，以挂号成功信息为主。"
        android:minLines="2"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="@color/line"
        app:layout_constraintTop_toBottomOf="@id/tvText1"
        android:layout_marginTop="@dimen/dp24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>