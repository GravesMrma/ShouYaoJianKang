<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_bg"
    tools:context=".activity.ApplyLevelActivity">

    <View
        android:id="@+id/fake_status_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/statusbar_view_height"
        android:background="@color/white" />

    <com.hhjt.baselibrary.widgets.TemplateTitle
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:canBack="true"
        app:moreText="晋升规则"
        app:titleText="等级申请" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp14"
                android:layout_marginTop="@dimen/dp24"
                android:text="请选择申请等级"
                android:textColor="@color/black_33"
                android:textSize="@dimen/f16"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp14">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp17"
                    android:background="@drawable/sp_white_10"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp13"
                    android:paddingTop="@dimen/dp26"
                    android:paddingRight="@dimen/dp13"
                    android:paddingBottom="@dimen/dp24">

                    <RelativeLayout
                        android:id="@+id/rlView1"
                        android:layout_width="@dimen/dp146"
                        android:layout_height="@dimen/dp96"
                        android:background="@drawable/selector_card_money_tag">

                        <TextView
                            android:id="@+id/tvText1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp17"
                            android:text="会员卡起购数量:"
                            android:textColor="@color/selector_black_orange"
                            android:textSize="@dimen/f12" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="@dimen/dp17"
                            android:gravity="bottom"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvNumber1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/selector_black_orange"
                                android:textSize="@dimen/f29" />

                            <TextView
                                android:id="@+id/tvNumber11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp5"
                                android:text="张"
                                android:textColor="@color/selector_black_orange"
                                android:textSize="@dimen/f12" />

                        </LinearLayout>

                    </RelativeLayout>

                    <Space
                        android:id="@+id/vLine2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <RelativeLayout
                        android:id="@+id/rlView2"
                        android:layout_width="@dimen/dp146"
                        android:layout_height="@dimen/dp96"
                        android:background="@drawable/selector_card_money_tag">

                        <TextView
                            android:id="@+id/tvText2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp17"
                            android:text="会员卡起购数量:"
                            android:textColor="@color/selector_black_orange"
                            android:textSize="@dimen/f12" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="@dimen/dp17"
                            android:gravity="bottom"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvNumber2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/selector_black_orange"
                                android:textSize="@dimen/f29" />

                            <TextView
                                android:id="@+id/tvNumber22"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp5"
                                android:text="张"
                                android:textColor="@color/selector_black_orange"
                                android:textSize="@dimen/f12" />

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

                <RadioGroup
                    android:id="@+id/mRgRecord"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp34"
                    android:layout_marginLeft="@dimen/dp30"
                    android:layout_marginRight="@dimen/dp30"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/mRbOne"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/selector_coin_level"
                        android:button="@null"
                        android:gravity="center"
                        android:text="守护者"
                        android:textColor="@color/white"
                        android:textSize="@dimen/f13" />

                    <View
                        android:id="@+id/vLine1"
                        android:layout_width="@dimen/dp45"
                        android:layout_height="@dimen/dp16"
                        android:background="@color/line" />

                    <RadioButton
                        android:id="@+id/mRbTwo"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/selector_coin_level"
                        android:button="@null"
                        android:gravity="center"
                        android:text="全球合伙人"
                        android:textColor="@color/white"
                        android:textSize="@dimen/f13" />

                </RadioGroup>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp14"
                android:layout_marginTop="@dimen/dp14"
                android:layout_marginRight="@dimen/dp14"
                android:background="@drawable/sp_white_10"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp13"
                android:paddingRight="@dimen/dp13">

                <EditText
                    android:id="@+id/edName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/clarity"
                    android:hint="请填写申请人姓名"
                    android:lines="1"
                    android:paddingTop="@dimen/dp17"
                    android:paddingBottom="@dimen/dp17"
                    android:textColor="@color/black_33"
                    android:textColorHint="@color/gray_99"
                    android:textSize="@dimen/f16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/line" />

                <EditText
                    android:id="@+id/edPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/clarity"
                    android:hint="请填写申请人手机"
                    android:inputType="number"
                    android:lines="1"
                    android:paddingTop="@dimen/dp17"
                    android:paddingBottom="@dimen/dp17"
                    android:textColor="@color/black_33"
                    android:textColorHint="@color/gray_99"
                    android:textSize="@dimen/f16" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp14"
                android:text="申请成功后，平台会在24小时内与您取得联系！"
                android:textColor="@color/gray_99"
                android:textSize="@dimen/f12" />

            <TextView
                android:id="@+id/tvRecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp80"
                android:drawableRight="@mipmap/ic_more_gray"
                android:drawablePadding="@dimen/dp5"
                android:gravity="center"
                android:text="查看等级申请记录"
                android:textColor="@color/gray_99"
                android:textSize="@dimen/f13" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp28"
        android:paddingTop="@dimen/dp5"
        android:paddingRight="@dimen/dp28"
        android:paddingBottom="@dimen/dp5">

        <TextView
            android:id="@+id/tvCommit"
            style="@style/buttonStyleRound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="申请等级" />

    </LinearLayout>
</LinearLayout>