<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/ivImg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/dp14"
        app:layout_constraintDimensionRatio="2.6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundBottomLeft="true"
        app:roundBottomRight="true"
        app:roundTopLeft="true"
        app:roundTopRight="true"
        app:roundedCornerRadius="@dimen/dp10" />

    <TextView
        android:id="@+id/tvText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp14"
        android:layout_marginTop="@dimen/dp19"
        android:textColor="@color/black_33"
        android:textSize="@dimen/f13"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivImg" />

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp14"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp14"
        android:textColor="@color/gray_99"
        android:textSize="@dimen/f12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvText" />

    <TextView
        android:id="@+id/tvLisNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp14"
        android:drawableLeft="@mipmap/ic_now_l"
        android:drawablePadding="@dimen/dp3"
        android:gravity="center_vertical"
        android:text="672次收听"
        android:textColor="@color/gray_99"
        android:textSize="@dimen/f10"
        app:layout_constraintBottom_toBottomOf="@id/tvDesc"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>