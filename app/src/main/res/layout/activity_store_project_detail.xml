<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.StoreProjectDetailActivity">

    <com.hhjt.baselibrary.widgets.TemplateTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:canBack="true"
        app:titleText="充值项目"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp14"
        android:background="@drawable/sp_store_bg1"
        android:padding="@dimen/dp24">

        <ImageView
            android:id="@+id/ivImg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_face_by"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvName1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp17"
            android:layout_marginRight="@dimen/dp20"
            android:text="超值面部保养钻石年卡"
            android:textColor="@color/black_33"
            android:textSize="@dimen/f14"
            app:layout_constraintLeft_toRightOf="@id/ivImg1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivImg1" />

        <TextView
            android:id="@+id/tvPro1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12个项目"
            android:textColor="@color/gray_99"
            android:textSize="@dimen/f12"
            app:layout_constraintBottom_toBottomOf="@id/ivImg1"
            app:layout_constraintLeft_toLeftOf="@id/tvName1" />

        <TextView
            android:id="@+id/tvNum1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp20"
            android:text="12个项目"
            android:textColor="@color/gray_99"
            android:textSize="@dimen/f12"
            app:layout_constraintBottom_toBottomOf="@id/tvPro1"
            app:layout_constraintLeft_toRightOf="@id/tvPro1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_more_ring"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>