<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SetActivity">

    <View
        android:id="@+id/fake_status_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/statusbar_view_height"
        android:background="@color/white"/>

    <com.hhjt.baselibrary.widgets.TemplateTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:canBack="true"
        app:titleText="设置"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <TextView
            android:id="@+id/tvUserInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp14"
            android:drawableRight="@mipmap/ic_more_gray"
            android:layout_centerVertical="true"
            android:textColor="@color/black_33"
            android:textSize="@dimen/f13"
            android:text="个人资料"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"
            android:layout_marginLeft="@dimen/dp14"
            android:layout_marginRight="@dimen/dp14"/>

        <TextView
            android:id="@+id/tvAuth"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp14"
            android:drawableRight="@mipmap/ic_more_gray"
            android:layout_centerVertical="true"
            android:textColor="@color/black_33"
            android:textSize="@dimen/f13"
            android:text="实名认证"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"
            android:layout_marginLeft="@dimen/dp14"
            android:layout_marginRight="@dimen/dp14"/>

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp14"
            android:drawableRight="@mipmap/ic_more_gray"
            android:layout_centerVertical="true"
            android:textColor="@color/black_33"
            android:textSize="@dimen/f13"
            android:text="地址管理"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp14"
        android:orientation="vertical"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp14">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_33"
                android:textSize="@dimen/f13"
                android:text="接收新消息通知"/>

            <TextView
                android:id="@+id/tvState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/selector_gray99_black"
                android:textSize="@dimen/f13"
                android:text="未开启"/>

            <TextView
                android:id="@+id/tvDesc"
                android:layout_below="@id/tvState"
                android:layout_marginTop="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sp_orange_5_a2"
                android:gravity="center"
                android:padding="@dimen/dp9"
                android:text="立即开启，不错过订单重要通知"
                android:textSize="@dimen/f12"
                android:textColor="#FEFEFE"/>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"
            android:layout_marginLeft="@dimen/dp14"
            android:layout_marginRight="@dimen/dp14"/>

        <RelativeLayout
            android:id="@+id/rlCache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp14">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_33"
                android:textSize="@dimen/f13"
                android:text="清除缓存"/>

            <TextView
                android:id="@+id/tvCache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableRight="@mipmap/ic_more_gray"
                android:drawablePadding="@dimen/dp18"
                android:textColor="@color/black_33"
                android:textSize="@dimen/f13"/>

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"
            android:layout_marginLeft="@dimen/dp14"
            android:layout_marginRight="@dimen/dp14"/>

        <RelativeLayout
            android:id="@+id/rlUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp14">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_33"
                android:textSize="@dimen/f13"
                android:text="版本更新"/>

            <TextView
                android:id="@+id/tvVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableRight="@mipmap/ic_more_gray"
                android:drawablePadding="@dimen/dp18"
                android:textColor="@color/black_33"
                android:textSize="@dimen/f13"
                android:text="V1.1.3"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"
            android:layout_marginLeft="@dimen/dp14"
            android:layout_marginRight="@dimen/dp14"/>

        <RelativeLayout
            android:id="@+id/rlAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp14">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_33"
                android:textSize="@dimen/f13"
                android:text="关于我们"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableRight="@mipmap/ic_more_gray"
                android:drawablePadding="@dimen/dp18"
                android:textColor="@color/black_33"
                android:textSize="@dimen/f13"/>

        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btLogout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp38"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp19"
            android:layout_marginLeft="@dimen/dp60"
            android:layout_marginRight="@dimen/dp60"
            style="@style/buttonStyleRoundGary"
            android:text="退出登录"/>

    </RelativeLayout>

</LinearLayout>