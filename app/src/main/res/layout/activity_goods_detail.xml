<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.GoodsDetailActivity">

    <com.hhjt.baselibrary.widgets.TemplateTitle
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dp1"
        app:canBack="true"
        app:layout_constraintTop_toTopOf="parent"
        app:titleBackground="@color/clarity" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nsView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/rlView"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.youth.banner.Banner
                android:id="@+id/mBanner"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1.2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp14"
                android:textColor="@color/black_33"
                android:textSize="@dimen/f15"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/mBanner" />

            <TextView
                android:id="@+id/tvText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp14"
                android:layout_marginTop="@dimen/dp32"
                android:text="@string/rmb"
                android:textColor="@color/orange"
                android:textSize="@dimen/f11"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvName" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp2"
                android:layout_marginTop="@dimen/dp32"
                android:textColor="@color/orange"
                android:textSize="@dimen/f17"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/tvText"
                app:layout_constraintLeft_toRightOf="@id/tvText" />

            <TextView
                android:id="@+id/tvOldPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp14"
                android:layout_marginTop="@dimen/dp32"
                android:textColor="@color/black_33"
                android:textSize="@dimen/f11"
                app:layout_constraintBottom_toBottomOf="@id/tvText"
                app:layout_constraintLeft_toRightOf="@id/tvPrice" />

            <TextView
                android:id="@+id/tvTagGS"
                android:layout_width="@dimen/dp48"
                android:layout_height="@dimen/dp18"
                android:layout_marginLeft="@dimen/dp19"
                android:background="@drawable/sp_goods_tag"
                android:gravity="center"
                android:text="包关税"
                android:textColor="@color/orange"
                android:textSize="@dimen/f11"
                app:layout_constraintBottom_toBottomOf="@id/tvText"
                app:layout_constraintLeft_toRightOf="@id/tvOldPrice" />

            <TextView
                android:layout_width="@dimen/dp48"
                android:layout_height="@dimen/dp18"
                android:layout_marginLeft="@dimen/dp7"
                android:background="@drawable/sp_goods_tag"
                android:gravity="center"
                android:text="包邮"
                android:textColor="@color/orange"
                android:textSize="@dimen/f11"
                app:layout_constraintBottom_toBottomOf="@id/tvText"
                app:layout_constraintLeft_toRightOf="@id/tvTagGS" />

            <TextView
                android:id="@+id/tvSellNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp14"
                android:gravity="center"
                android:text="已热销:391"
                android:textColor="@color/gray_66"
                android:textSize="@dimen/f11"
                app:layout_constraintBottom_toBottomOf="@id/tvText"
                app:layout_constraintRight_toRightOf="parent" />

            <LinearLayout
                android:id="@+id/llView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp14"
                android:background="@color/main_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp14"
                app:layout_constraintTop_toBottomOf="@id/tvText">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_mall_qq"
                    android:drawablePadding="@dimen/dp4"
                    android:gravity="center"
                    android:text="英国直供"
                    android:textColor="@color/gray_99"
                    android:textSize="@dimen/f11" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp14"
                    android:drawableLeft="@mipmap/ic_mall_zp"
                    android:drawablePadding="@dimen/dp4"
                    android:gravity="center"
                    android:text="正品保障"
                    android:textColor="@color/gray_99"
                    android:textSize="@dimen/f11" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp14"
                    android:drawableLeft="@mipmap/ic_mall_tk"
                    android:drawablePadding="@dimen/dp4"
                    android:gravity="center"
                    android:text="急速退款"
                    android:textColor="@color/gray_99"
                    android:textSize="@dimen/f11" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp14"
                    android:drawableLeft="@mipmap/ic_mall_sh"
                    android:drawablePadding="@dimen/dp4"
                    android:gravity="center"
                    android:text="售后无忧"
                    android:textColor="@color/gray_99"
                    android:textSize="@dimen/f11" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/ic_more"
                    android:gravity="right" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp14"
                app:layout_constraintTop_toBottomOf="@id/llView">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="领卷"
                    android:textColor="@color/gray_99"
                    android:textSize="@dimen/f12" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp24"
                    android:gravity="center"
                    android:text="满2000减100"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/f11" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp14"
                    android:gravity="center"
                    android:text="满2000减100"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/f11" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/ic_more"
                    android:gravity="right" />

            </LinearLayout>

            <View
                android:id="@+id/vLine"
                android:layout_width="match_parent"
                android:layout_height="1px"
                app:layout_constraintTop_toBottomOf="@id/llView1" />

            <LinearLayout
                android:id="@+id/llView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp14"
                app:layout_constraintTop_toBottomOf="@id/vLine">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="配送"
                    android:textColor="@color/gray_99"
                    android:textSize="@dimen/f12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp24"
                    android:text="英国直邮 至 你所在的城市（免运费）\n16:00前完成下单，预计6天内通关运抵所在城市"
                    android:textColor="@color/gray_99"
                    android:textSize="@dimen/f11" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/ic_more"
                    android:gravity="right" />

            </LinearLayout>

            <WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/llView2" />


        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/rlView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp47"
        android:paddingLeft="@dimen/dp14"
        android:paddingRight="@dimen/dp14"
        app:layout_constraintBottom_toBottomOf="parent">


        <TextView
            android:id="@+id/tvKefu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableTop="@mipmap/ic_more"
            android:drawablePadding="@dimen/dp5"
            android:gravity="center"
            android:text="在线客服"
            android:textColor="@color/black_33"
            android:textSize="@dimen/f10" />

        <TextView
            android:id="@+id/tvShopCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvKefu"
            android:layout_marginLeft="@dimen/dp19"
            android:layout_centerVertical="true"
            android:drawableTop="@mipmap/ic_more"
            android:drawablePadding="@dimen/dp5"
            android:gravity="center"
            android:text="购物车"
            android:textColor="@color/black_33"
            android:textSize="@dimen/f10" />

        <TextView
            android:id="@+id/tvBuy"
            android:layout_width="@dimen/dp96"
            android:layout_height="@dimen/dp28"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="立即购买"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/sp_orange_14"/>

        <TextView
            android:id="@+id/tvAddCart"
            android:layout_width="@dimen/dp96"
            android:layout_height="@dimen/dp28"
            android:layout_toLeftOf="@id/tvBuy"
            android:layout_marginRight="@dimen/dp14"
            android:layout_centerVertical="true"
            android:text="加入购物车"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/sp_black_14"/>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>