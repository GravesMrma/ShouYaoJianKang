<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.EditUserInfoActivity">

    <View
        android:id="@+id/fake_status_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/statusbar_view_height"
        android:background="@color/white"/>

    <com.hhjt.baselibrary.widgets.TemplateTitle
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:canBack="true"
        app:moreText="保存"
        app:titleText="个人资料" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp14"
            android:paddingRight="@dimen/dp14">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="更换头像"
                android:textColor="@color/black_33"
                android:textSize="@dimen/f13" />


            <ImageView
                android:id="@+id/ivMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_more_gray" />


            <com.wuhanzihai.rbk.ruibeikang.widgets.CircleImageView
                android:id="@+id/ivHead"
                android:layout_width="@dimen/dp43"
                android:layout_height="@dimen/dp43"
                android:layout_marginTop="@dimen/dp14"
                android:layout_marginRight="@dimen/dp18"
                android:layout_marginBottom="@dimen/dp14"
                android:layout_toLeftOf="@id/ivMore"
                android:src="@color/red" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp14"
            android:layout_marginRight="@dimen/dp14"
            android:background="@color/line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp14">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="更换昵称"
                android:textColor="@color/black_33"
                android:textSize="@dimen/f13" />

            <EditText
                android:id="@+id/edName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/clarity"
                android:drawableRight="@mipmap/ic_more_gray"
                android:drawablePadding="@dimen/dp18"
                android:gravity="right"
                android:hint="更换昵称"
                android:textColor="@color/black_33"
                android:textColorHint="@color/gray_99"
                android:textSize="@dimen/f13" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp14"
            android:layout_marginRight="@dimen/dp14"
            android:background="@color/line" />

        <RelativeLayout
            android:id="@+id/rlSex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp14">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="性别"
                android:textColor="@color/black_33"
                android:textSize="@dimen/f13" />

            <TextView
                android:id="@+id/tvSex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@mipmap/ic_more_gray"
                android:drawablePadding="@dimen/dp18"
                android:gravity="right"
                android:hint="选择性别"
                android:textColor="@color/black_33"
                android:textColorHint="@color/gray_99"
                android:textSize="@dimen/f13" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp14"
            android:layout_marginRight="@dimen/dp14"
            android:background="@color/line" />

        <RelativeLayout
            android:id="@+id/rlBirthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp14">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="生日"
                android:textColor="@color/black_33"
                android:textSize="@dimen/f13" />

            <TextView
                android:id="@+id/tvBirthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@mipmap/ic_more_gray"
                android:drawablePadding="@dimen/dp18"
                android:gravity="right"
                android:hint="选择生日"
                android:textColor="@color/black_33"
                android:textColorHint="@color/gray_99"
                android:textSize="@dimen/f13" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp14"
            android:layout_marginRight="@dimen/dp14"
            android:background="@color/line" />

        <RelativeLayout
            android:id="@+id/rlHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp14">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="身高"
                android:textColor="@color/black_33"
                android:textSize="@dimen/f13" />

            <TextView
                android:id="@+id/tvHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@mipmap/ic_more_gray"
                android:drawablePadding="@dimen/dp18"
                android:gravity="right"
                android:hint="选择身高"
                android:textColor="@color/black_33"
                android:textColorHint="@color/gray_99"
                android:textSize="@dimen/f13" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp14"
            android:layout_marginRight="@dimen/dp14"
            android:background="@color/line" />

        <RelativeLayout
            android:id="@+id/rlWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp14">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="体重"
                android:textColor="@color/black_33"
                android:textSize="@dimen/f13" />

            <TextView
                android:id="@+id/tvWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@mipmap/ic_more_gray"
                android:drawablePadding="@dimen/dp18"
                android:gravity="right"
                android:hint="选择体重"
                android:textColor="@color/black_33"
                android:textColorHint="@color/gray_99"
                android:textSize="@dimen/f13" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp14"
            android:layout_marginRight="@dimen/dp14"
            android:background="@color/line" />

        <RelativeLayout
            android:id="@+id/rlAuth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp14"
            android:paddingRight="@dimen/dp14">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/dp14"
                android:layout_marginBottom="@dimen/dp14"
                android:text="实名认证"
                android:textColor="@color/black_33"
                android:textSize="@dimen/f13" />

            <TextView
                android:id="@+id/tvAuth"
                android:layout_width="@dimen/dp58"
                android:layout_height="@dimen/dp22"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/sp_orange_11"
                android:gravity="center"
                android:text="未认证"
                android:textColor="@color/white"
                android:textSize="@dimen/f12" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp14"
            android:layout_marginRight="@dimen/dp14"
            android:background="@color/line" />

        <RelativeLayout
            android:id="@+id/rlWeChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp14"
            android:paddingRight="@dimen/dp14">

            <TextView
                android:id="@+id/tvText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/dp14"
                android:layout_marginBottom="@dimen/dp14"
                android:text="绑定微信"
                android:textColor="@color/black_33"
                android:textSize="@dimen/f13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_toRightOf="@id/tvText"
                android:text="绑定后可用微信直接登录"
                android:textColor="@color/gray_99"
                android:textSize="@dimen/f10" />

            <TextView
                android:layout_width="@dimen/dp58"
                android:layout_height="@dimen/dp22"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/sp_orange_11"
                android:gravity="center"
                android:text="去绑定"
                android:textColor="@color/white"
                android:textSize="@dimen/f12" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp14"
            android:layout_marginRight="@dimen/dp14"
            android:background="@color/line" />

        <RelativeLayout
            android:id="@+id/rlTag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp14">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="所选标签"
                android:textColor="@color/black_33"
                android:textSize="@dimen/f13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@mipmap/ic_more_gray"
                android:drawablePadding="@dimen/dp18"
                android:textColor="@color/black_33"
                android:textColorHint="@color/gray_99"
                android:textSize="@dimen/f13" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>