<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="@dimen/dp250"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@mipmap/ic_updata">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="的用户已更新到最新版本"
            android:textColor="@color/black_33"
            android:textSize="@dimen/f13" />

        <LinearLayout
            android:id="@+id/llDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp200"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDesc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp19"
                android:layout_marginRight="@dimen/dp19"
                android:gravity="bottom"
                android:textColor="@color/black_33"
                android:textSize="@dimen/f12" />


        </LinearLayout>

        <TextView
            android:id="@+id/tvUpdate"
            android:layout_width="@dimen/dp200"
            android:layout_height="@dimen/dp34"
            android:text="立即更新"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dp280"
            android:gravity="center"
            android:textSize="@dimen/f13"
            android:layout_centerHorizontal="true"
            android:background="@drawable/sp_update"/>


    </RelativeLayout>

</RelativeLayout>