<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp68"
    android:background="@drawable/sp_white_5"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp26"
        android:gravity="center"
        android:text="确认要放弃本次支付吗？"
        android:textColor="@color/black_33"
        android:textSize="@dimen/f14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp25"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginRight="@dimen/dp25"
        android:gravity="center"
        android:text="请在 23小时59分 内完成支付，\n否则订单将会自动关闭！"
        android:textColor="@color/orange"
        android:textSize="@dimen/f11" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp37"
        android:layout_marginTop="@dimen/dp15"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="狠心放弃"
            android:textColor="@color/gray_99"
            android:textSize="@dimen/f12"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/sp_dialog_right"
            android:gravity="center"
            android:text="继续支付"
            android:textColor="@color/white"
            android:textSize="@dimen/f12"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>