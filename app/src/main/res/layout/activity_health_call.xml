<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.5">

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/clView"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="#A2E0EF"
                        app:layout_constraintDimensionRatio="1.75"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp20"
                            android:layout_marginRight="@dimen/dp14"
                            android:layout_marginBottom="@dimen/dp5"
                            android:background="@drawable/sp_cel_10"
                            android:minWidth="@dimen/dp76"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="672次收听"
                                android:textColor="@color/white"
                                android:textSize="@dimen/f10" />


                        </RelativeLayout>

                    </android.support.constraint.ConstraintLayout>

                    <TextView
                        android:id="@+id/tvTitle1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp14"
                        android:layout_marginTop="@dimen/dp14"
                        android:layout_marginRight="@dimen/dp14"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="千叶医生联盟：您的私人健康顾问"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/f15"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/clView" />

                    <TextView
                        android:id="@+id/tvTitle2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp14"
                        android:layout_marginTop="@dimen/dp10"
                        android:layout_marginRight="@dimen/dp14"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="合计6期节目，每期平均2分钟/每月月初定期更新健康专家轮番上阵传授健康秘籍。"
                        android:textColor="@color/gray_99"
                        android:textSize="@dimen/f12"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvTitle1" />

                </android.support.constraint.ConstraintLayout>

            </android.support.design.widget.CollapsingToolbarLayout>

            <RadioGroup
                android:id="@+id/mRgRecord"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp48"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/mRbInfo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="true"
                    android:drawableBottom="@drawable/selector_coin_indicator"
                    android:drawablePadding="@dimen/dp9"
                    android:gravity="bottom|center_horizontal"
                    android:text="简介"
                    android:textColor="@color/selector_attention_doctor"
                    android:textSize="@dimen/f17" />

                <View
                    android:layout_width="1px"
                    android:layout_height="@dimen/dp16"
                    android:background="@color/line" />

                <RadioButton
                    android:id="@+id/mRbCall"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableBottom="@drawable/selector_coin_indicator"
                    android:drawablePadding="@dimen/dp9"
                    android:gravity="bottom|center_horizontal"
                    android:text="音频"
                    android:textColor="@color/selector_attention_doctor"
                    android:textSize="@dimen/f17" />

            </RadioGroup>

            <View
                android:id="@+id/vLine"
                android:layout_width="0dp"
                android:layout_height="1px"
                android:background="@color/line"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mRgRecord" />

        </android.support.design.widget.AppBarLayout>

        <com.hhjt.baselibrary.widgets.APSTSViewPager
            android:id="@+id/vpView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>