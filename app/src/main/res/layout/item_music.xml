<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sp_white_10">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/ivImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1.38"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:failureImage="@mipmap/ic_empty_item1"
        app:failureImageScaleType="fitXY"
        app:placeholderImage="@mipmap/ic_empty_item1"
        app:placeholderImageScaleType="fitXY"
        app:roundBottomLeft="false"
        app:roundBottomRight="false"
        app:roundTopLeft="true"
        app:roundTopRight="true"
        app:roundedCornerRadius="@dimen/dp10" />

    <TextView
        android:id="@+id/tvText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20"
        android:textColor="@color/black_33"
        android:textSize="@dimen/f16"
        android:layout_marginLeft="@dimen/dp8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivImage" />

    <TextView
        android:id="@+id/tvText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp2"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/gray_99"
        android:textSize="@dimen/f12"
        app:layout_constraintLeft_toLeftOf="@id/tvText1"
        app:layout_constraintTop_toBottomOf="@id/tvText1" />

    <TextView
        android:id="@+id/tvText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp6"
        android:drawableLeft="@mipmap/ic_now_l"
        android:drawablePadding="@dimen/dp3"
        android:gravity="center_vertical"
        android:text="672次收听"
        android:textColor="@color/gray_99"
        android:textSize="@dimen/f10"
        app:layout_constraintLeft_toLeftOf="@id/tvText1"
        app:layout_constraintTop_toBottomOf="@id/tvText2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp13"/>


</android.support.constraint.ConstraintLayout>