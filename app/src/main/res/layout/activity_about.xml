<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#f6f6f8"
    tools:context=".activity.AboutActivity">

    <View
        android:id="@+id/fake_status_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/statusbar_view_height"
        android:background="@color/white" />

    <com.hhjt.baselibrary.widgets.TemplateTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:canBack="true"
        app:titleText="关于我们" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp62"
        android:layout_marginBottom="@dimen/dp138"
        android:drawableTop="@mipmap/ic_launcher"
        android:drawablePadding="@dimen/dp7"
        android:gravity="center"
        android:text="我的健康管家"
        android:textColor="@color/green_08"
        android:textSize="@dimen/f11" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp14"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableRight="@mipmap/ic_more_gray"
            android:padding="@dimen/dp14"
            android:text="关于首要健康"
            android:textColor="@color/black_33"
            android:textSize="@dimen/f13" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp14"
            android:layout_marginRight="@dimen/dp14"
            android:background="@color/line" />

        <TextView
            android:id="@+id/tvUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableRight="@mipmap/ic_more_gray"
            android:padding="@dimen/dp14"
            android:text="用户服务协议"
            android:textColor="@color/black_33"
            android:textSize="@dimen/f13" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp14"
            android:layout_marginRight="@dimen/dp14"
            android:background="@color/line" />

        <TextView
            android:id="@+id/tvSecret"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableRight="@mipmap/ic_more_gray"
            android:padding="@dimen/dp14"
            android:text="隐私政策"
            android:textColor="@color/black_33"
            android:textSize="@dimen/f13" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/btLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp60"
            android:layout_marginRight="@dimen/dp60"
            android:layout_marginBottom="@dimen/dp53"
            android:lineSpacingExtra="@dimen/dp5"
            android:gravity="center"
            android:textSize="@dimen/f12"
            android:textColor="@color/gray_99"
            android:text="Copyright © 2019 版权所有:\n武汉浩辰健康管理咨询服务有限公司" />

    </RelativeLayout>
</LinearLayout>