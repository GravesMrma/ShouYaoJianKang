<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/clView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sp_green_10_b0"
            android:padding="@dimen/dp11">

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019.08.15    13:10"
                android:textColor="@color/white"
                android:textSize="@dimen/f12"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvApplyNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合伙人:李骁"
                android:textColor="@color/white"
                android:textSize="@dimen/f12"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sp_white_10_t0"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp11"
            android:paddingTop="@dimen/dp19"
            android:paddingRight="@dimen/dp11"
            android:paddingBottom="@dimen/dp19">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单号:"
                    android:textColor="@color/green_08"
                    android:textSize="@dimen/f14" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:text="98566465646656526"
                    android:textColor="@color/gray_99"
                    android:textSize="@dimen/f14" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="购买商品:"
                    android:textColor="@color/green_08"
                    android:textSize="@dimen/f14" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商品合计:"
                        android:textColor="@color/green_08"
                        android:textSize="@dimen/f14" />

                    <TextView
                        android:id="@+id/tvNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp10"
                        android:text="¥ 3580"
                        android:textColor="@color/gray_99"
                        android:textSize="@dimen/f14" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="返利比例:"
                        android:textColor="@color/green_08"
                        android:textSize="@dimen/f14" />

                    <TextView
                        android:id="@+id/tvNoNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp10"
                        android:text="18%"
                        android:textColor="@color/gray_99"
                        android:textSize="@dimen/f14" />

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_marginTop="@dimen/dp18"
                android:background="@color/line" />

            <RelativeLayout
                android:id="@+id/rlViewNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp18">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="返利:"
                        android:textColor="@color/green_08"
                        android:textSize="@dimen/f14" />

                    <TextView
                        android:id="@+id/tvYJHNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp10"
                        android:text="¥ 644.4"
                        android:textColor="@color/gray_99"
                        android:textSize="@dimen/f14" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="未提现"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/f14" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>