<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp10"
        android:minHeight="@dimen/dp240"
        android:background="@drawable/sp_white_10">

        <TextView
            android:id="@+id/tvText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingBottom="@dimen/dp15"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp57"
            android:layout_marginRight="@dimen/dp57"
            android:lineSpacingExtra="@dimen/dp5"
            android:textColor="@color/black_33"
            android:textSize="@dimen/f12"/>

        <TextView
            android:id="@+id/tvCommit"
            android:layout_width="@dimen/dp96"
            android:layout_height="@dimen/dp28"
            android:layout_marginTop="@dimen/dp22"
            android:layout_marginBottom="@dimen/dp24"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:background="@drawable/sp_green_21"
            android:text="去开启"
            android:textColor="@color/white"
            android:textSize="@dimen/f12"/>

    </android.support.constraint.ConstraintLayout>

</RelativeLayout>