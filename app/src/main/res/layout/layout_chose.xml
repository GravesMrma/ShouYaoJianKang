<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/sp_white_5"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp33">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp20"
        android:text="是否确定要解绑银行卡？"
        android:textColor="@color/black_33"
        android:textSize="@dimen/f14" />

    <TextView
        android:layout_width="@dimen/dp190"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginTop="@dimen/dp13"
        android:layout_marginRight="@dimen/dp20"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/dp2"
        android:text="解绑后平台无法给您转账返利您可以解绑后重新绑定新的银行卡！"
        android:textColor="@color/gray_99"
        android:textSize="@dimen/f12" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/dp14"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp38"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我再想想"
            android:textColor="@color/gray_99"
            android:textSize="@dimen/f12" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line"/>

        <TextView
            android:id="@+id/tvSure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确认解绑"
            android:textColor="@color/gray_99"
            android:textSize="@dimen/f12" />

    </LinearLayout>


</LinearLayout>