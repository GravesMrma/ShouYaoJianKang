<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.CardStockActivity">

    <View
        android:id="@+id/fake_status_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/statusbar_view_height"
        android:background="@color/white" />

    <com.hhjt.baselibrary.widgets.TemplateTitle
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:canBack="true"
        app:titleText="礼包库存" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp14"
                android:layout_marginTop="@dimen/dp19"
                android:layout_marginRight="@dimen/dp14"
                android:layout_marginBottom="@dimen/dp19"
                android:background="@drawable/sp_white_10"
                android:padding="@dimen/dp14">

                <ImageView
                    android:id="@+id/ivImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_card_stk"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp14"
                    android:text="我的礼包库存"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/f17"
                    app:layout_constraintBottom_toBottomOf="@id/ivImg"
                    app:layout_constraintLeft_toRightOf="@id/ivImg"
                    app:layout_constraintTop_toTopOf="@id/ivImg" />

                <TextView
                    android:id="@+id/tvText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张"
                    android:textColor="@color/gray_66"
                    android:textSize="@dimen/f12"
                    app:layout_constraintBottom_toBottomOf="@id/tvText"
                    app:layout_constraintRight_toRightOf="parent" />

                <TextView
                    android:id="@+id/tvNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp15"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/f22"
                    app:layout_constraintBottom_toBottomOf="@id/tvText"
                    app:layout_constraintRight_toLeftOf="@id/tvText1" />

                <View
                    android:id="@+id/vLine"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_marginTop="@dimen/dp12"
                    android:background="#BCBCBC"
                    app:layout_constraintTop_toBottomOf="@id/ivImg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp15"
                    app:layout_constraintTop_toBottomOf="@id/vLine">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="@dimen/dp22"
                                android:layout_height="@dimen/dp22"
                                android:background="@drawable/sp_card_ring"
                                android:gravity="center"
                                android:text="1"
                                android:textColor="@color/white"
                                android:textSize="@dimen/f15" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp12"
                                android:text="什么是礼包库存？"
                                android:textColor="@color/orange"
                                android:textSize="@dimen/f17" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvText11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp15"
                            android:textColor="@color/gray_99"
                            android:textSize="@dimen/f12" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:layout_marginTop="@dimen/dp15"
                        android:background="@color/line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp15"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="@dimen/dp22"
                                android:layout_height="@dimen/dp22"
                                android:background="@drawable/sp_card_ring"
                                android:gravity="center"
                                android:text="2"
                                android:textColor="@color/white"
                                android:textSize="@dimen/f15" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp12"
                                android:text="礼包库存是如何扣减与购买的？"
                                android:textColor="@color/orange"
                                android:textSize="@dimen/f17" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvText22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp15"
                            android:textColor="@color/gray_99"
                            android:textSize="@dimen/f12" />
                    </LinearLayout>

                </LinearLayout>
            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/tvRecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawableRight="@mipmap/ic_more_gray"
                android:drawablePadding="@dimen/dp5"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp73"
                android:layout_marginBottom="@dimen/dp24"
                android:text="查看库存申请记录"
                android:textColor="@color/gray_99"
                android:textSize="@dimen/f13" />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp28"
        android:paddingTop="@dimen/dp5"
        android:paddingRight="@dimen/dp28"
        android:paddingBottom="@dimen/dp5">

        <TextView
            android:id="@+id/tvCommit"
            style="@style/buttonStyleRound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="等级申请" />

    </LinearLayout>

</LinearLayout>