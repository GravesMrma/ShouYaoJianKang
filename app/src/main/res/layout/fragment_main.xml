                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawableTop="@mipmap/ic_jksh"
                            android:drawablePadding="@dimen/dp10"
                            android:gravity="center"
                            android:text="健康自检"
                            android:textColor="@color/gray_66"
                            android:textSize="@dimen/f13" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlHeathCare"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawableTop="@mipmap/ic_jkyl"
                            android:drawablePadding="@dimen/dp10"
                            android:gravity="center"
                            android:text="健康医疗"
                            android:textColor="@color/gray_66"
                            android:textSize="@dimen/f13" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/lManager"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp14"
                android:paddingBottom="@dimen/dp14"
                android:paddingLeft="@dimen/dp12"
                android:paddingRight="@dimen/dp12"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lFour">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/ivImgOne"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1.50"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/ivImgTwo"
                    app:roundTopLeft="true"
                    app:roundTopRight="true"
                    app:roundBottomLeft="true"
                    app:roundBottomRight="true"
                    app:roundedCornerRadius="@dimen/dp10"
                    android:layout_marginRight="@dimen/dp5"/>

                <!--<Space-->
                    <!--android:layout_width="@dimen/dp10"-->
                    <!--android:layout_height="wrap_content" />-->

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/ivImgTwo"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1.50"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/ivImgOne"
                    android:layout_marginLeft="@dimen/dp5"
                    app:roundTopLeft="true"
                    app:roundTopRight="true"
                    app:roundBottomLeft="true"
                    app:roundBottomRight="true"
                    app:roundedCornerRadius="@dimen/dp10"/>


                <!--<LinearLayout-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="@dimen/dp12"-->
                    <!--android:layout_marginBottom="@dimen/dp12"-->
                    <!--android:gravity="center_vertical"-->
                    <!--android:orientation="horizontal"-->
                    <!--android:visibility="gone">-->

                    <!--<ImageView-->
                        <!--android:layout_width="@dimen/dp9"-->
                        <!--android:layout_height="@dimen/dp18"-->
                        <!--android:src="@drawable/sp_green_9_l" />-->

                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginLeft="@dimen/dp8"-->
                        <!--android:drawableLeft="@drawable/sp_green_9_l"-->
                        <!--android:text="身心管理"-->
                        <!--android:textColor="@color/black_33"-->
                        <!--android:textSize="@dimen/f15" />-->

                <!--</LinearLayout>-->


            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                android:id="@+id/lSport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp14"
                android:paddingBottom="@dimen/dp14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lManager">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp12"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp9"
                        android:layout_height="@dimen/dp18"
                        android:src="@drawable/sp_green_9_l" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp8"
                        android:drawableLeft="@drawable/sp_green_9_l"
                        android:text="健康生活方式"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/f15"
                        android:textStyle="bold" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvSport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lTry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:background="@color/white"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lSport">

                <LinearLayout
