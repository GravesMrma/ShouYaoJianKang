<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <View
        android:id="@+id/fake_status_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/statusbar_view_height"
        android:background=" #EEE7DD" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:background=" #EEE7DD"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp15"
        android:paddingTop="@dimen/dp5"
        android:paddingRight="@dimen/dp15"
        android:paddingBottom="@dimen/dp5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvToSearch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/sp_white_15"
            android:drawableLeft="@mipmap/sy_top_ss"
            android:drawablePadding="@dimen/dp10"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp12"
            android:text="搜索文章、音频、商品"
            android:textColor="@color/gray_99"
            android:textSize="@dimen/f16" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp24">

            <ImageView
                android:id="@+id/ivImg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp3"
                android:src="@mipmap/ic_msg_white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/vNote"
                android:layout_width="@dimen/dp9"
                android:layout_height="@dimen/dp9"
                android:background="@drawable/sp_red_ring"
                android:visibility="gone"
                app:layout_constraintRight_toRightOf="@id/ivImg1"
                app:layout_constraintTop_toTopOf="@id/ivImg1" />
        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/srView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/vBg"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="#EEE7DD"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    app:layout_constraintDimensionRatio="2.8"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/white"
                    app:layout_constraintBottom_toTopOf="@id/lFour"
                    app:layout_constraintTop_toBottomOf="@id/vBg" />

                <com.youth.banner.Banner
                    android:id="@+id/mBanner"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/dp9"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_marginRight="@dimen/dp9"
                    app:layout_constraintDimensionRatio="1.75"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/lFour"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp14"
                    android:paddingBottom="@dimen/dp14"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mBanner">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp15"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/rlHeathInfo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:drawableTop="@mipmap/ic_jkzs"
                                android:drawablePadding="@dimen/dp10"
                                android:gravity="center"
                                android:text="健康知识"
                                android:textColor="@color/gray_66"
                                android:textSize="@dimen/f13" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlHeathHabits"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:drawableTop="@mipmap/ic_jkxg"
                                android:drawablePadding="@dimen/dp10"
                                android:gravity="center"
                                android:text="健康习惯"
                                android:textColor="@color/gray_66"
                                android:textSize="@dimen/f13" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlHeathCheck"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:drawableTop="@mipmap/ic_jksh"
                                android:drawablePadding="@dimen/dp10"
                                android:gravity="center"
                                android:text="健康自检"
                                android:textColor="@color/gray_66"
                                android:textSize="@dimen/f13" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlHeathCare"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:drawableTop="@mipmap/ic_jkyl"
                                android:drawablePadding="@dimen/dp10"
                                android:gravity="center"
                                android:text="健康医疗"
                                android:textColor="@color/gray_66"
                                android:textSize="@dimen/f13" />
                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/lManager"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp12"
                    android:paddingTop="@dimen/dp14"
                    android:paddingRight="@dimen/dp12"
                    android:paddingBottom="@dimen/dp14"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lFour">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/ivImgOne"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginRight="@dimen/dp5"
                        app:layout_constraintDimensionRatio="1.50"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/ivImgTwo"
                        app:layout_constraintTop_toTopOf="parent"
                        app:roundBottomLeft="true"
                        app:roundBottomRight="true"
                        app:roundTopLeft="true"
                        app:roundTopRight="true"
                        app:roundedCornerRadius="@dimen/dp10" />

                    <!--<Space-->
                    <!--android:layout_width="@dimen/dp10"-->
                    <!--android:layout_height="wrap_content" />-->

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/ivImgTwo"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginLeft="@dimen/dp5"
                        app:layout_constraintDimensionRatio="1.50"
                        app:layout_constraintLeft_toRightOf="@id/ivImgOne"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:roundBottomLeft="true"
                        app:roundBottomRight="true"
                        app:roundTopLeft="true"
                        app:roundTopRight="true"
                        app:roundedCornerRadius="@dimen/dp10" />


                    <!--<LinearLayout-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="@dimen/dp12"-->
                    <!--android:layout_marginBottom="@dimen/dp12"-->
                    <!--android:gravity="center_vertical"-->
                    <!--android:orientation="horizontal"-->
                    <!--android:visibility="gone">-->

                    <!--<ImageView-->
                    <!--android:layout_width="@dimen/dp9"-->
                    <!--android:layout_height="@dimen/dp18"-->
                    <!--android:src="@drawable/sp_green_9_l" />-->

                    <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginLeft="@dimen/dp8"-->
                    <!--android:drawableLeft="@drawable/sp_green_9_l"-->
                    <!--android:text="身心管理"-->
                    <!--android:textColor="@color/black_33"-->
                    <!--android:textSize="@dimen/f15" />-->

                    <!--</LinearLayout>-->


                </android.support.constraint.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/lSport"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp14"
                    android:paddingBottom="@dimen/dp14"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lManager">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp12"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp9"
                            android:layout_height="@dimen/dp18"
                            android:src="@drawable/sp_green_9_l" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp8"
                            android:drawableLeft="@drawable/sp_green_9_l"
                            android:text="健康生活方式"
                            android:textColor="@color/black_33"
                            android:textSize="@dimen/f15"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvSport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:overScrollMode="never" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lTry"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@color/white"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lSport">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp12"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp9"
                            android:layout_height="@dimen/dp18"
                            android:src="@drawable/sp_green_9_l" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp8"
                            android:drawableLeft="@drawable/sp_green_9_l"
                            android:text="健康食谱大全"
                            android:textColor="@color/black_33"
                            android:textSize="@dimen/f15"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="@dimen/dp14">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:src="@mipmap/ic_today_food" />

                        </RelativeLayout>

                    </LinearLayout>

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp9"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_marginRight="@dimen/dp9"
                        android:layout_marginBottom="@dimen/dp10">

                        <com.youth.banner.Banner
                            android:id="@+id/mBannerFood"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:layout_constraintDimensionRatio="1.79"
                            app:layout_constraintTop_toTopOf="parent" />
                    </android.support.constraint.ConstraintLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lClock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp14"
                    android:paddingBottom="@dimen/dp4"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lTry">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp4"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp9"
                            android:layout_height="@dimen/dp18"
                            android:src="@drawable/sp_green_9_l" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp8"
                            android:drawableLeft="@drawable/sp_green_9_l"
                            android:text="健康作息时钟"
                            android:textColor="@color/black_33"
                            android:textSize="@dimen/f15"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_margin="@dimen/dp10"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/dp5"
                            app:cardElevation="@dimen/dp5"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintDimensionRatio="1.76"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <android.support.constraint.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="@dimen/dp10">

                                <TextView
                                    android:id="@+id/tvText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp10"
                                    android:layout_marginRight="@dimen/dp3"
                                    android:textColor="@color/green_08"
                                    android:textSize="@dimen/f29"
                                    android:textStyle="bold"
                                    app:layout_constraintLeft_toLeftOf="@id/tvContent"
                                    app:layout_constraintRight_toRightOf="@id/tvContent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/tvText1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp5"
                                    android:layout_marginRight="@dimen/dp3"
                                    android:gravity="center"
                                    android:textColor="@color/gray_99"
                                    android:textSize="@dimen/f15"
                                    app:layout_constraintLeft_toLeftOf="@id/tvContent"
                                    app:layout_constraintRight_toRightOf="@id/tvContent"
                                    app:layout_constraintTop_toBottomOf="@id/tvText" />

                                <TextView
                                    android:id="@+id/tvContent"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/dp3"
                                    android:ellipsize="end"
                                    android:maxLines="5"
                                    android:textColor="@color/gray_66"
                                    android:textSize="@dimen/f12"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toLeftOf="@id/ivImg"
                                    app:layout_constraintRight_toRightOf="@id/tvText" />

                                <com.facebook.drawee.view.SimpleDraweeView
                                    android:id="@+id/ivImg"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:scaleType="center"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintDimensionRatio="1"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </android.support.constraint.ConstraintLayout>

                        </android.support.v7.widget.CardView>

                    </android.support.constraint.ConstraintLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lTest"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp12"
                    android:paddingTop="@dimen/dp14"
                    android:paddingRight="@dimen/dp12"
                    android:paddingBottom="@dimen/dp14"
                    android:visibility="gone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lClock">

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/clQuestion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/sp_test_bg"
                        android:paddingBottom="@dimen/dp15">

                        <TextView
                            android:id="@+id/tvTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp24"
                            android:layout_marginTop="@dimen/dp23"
                            android:text="每日一测，认知自我"
                            android:textColor="@color/white"
                            android:textSize="@dimen/f15"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvDesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp7"
                            android:text="通过健康测试有效预防疾病"
                            android:textColor="@color/clarity_50f"
                            android:textSize="@dimen/f11"
                            app:layout_constraintLeft_toLeftOf="@id/tvTitle"
                            app:layout_constraintTop_toBottomOf="@id/tvTitle" />

                        <TextView
                            android:id="@+id/tvMore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp22"
                            android:layout_marginRight="@dimen/dp10"
                            android:text="更多"
                            android:textColor="@color/white"
                            android:textSize="@dimen/f11"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp10"
                            android:src="@mipmap/pic_doc"
                            app:layout_constraintRight_toLeftOf="@id/tvMore"
                            app:layout_constraintTop_toTopOf="parent" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp10"
                            android:layout_marginTop="@dimen/dp30"
                            android:layout_marginRight="@dimen/dp10"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            app:layout_constraintTop_toBottomOf="@id/tvDesc">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/dp10"
                                android:background="@drawable/sp_white_5"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="@dimen/dp10">

                                <ImageView
                                    android:layout_width="@dimen/dp52"
                                    android:layout_height="@dimen/dp52"
                                    android:src="@mipmap/pic_test" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp10"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="精神压力测试"
                                        android:textColor="@color/black_33"
                                        android:textSize="@dimen/f13" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="20道题目有效测试您的精神压力状态"
                                        android:textColor="@color/gray_99"
                                        android:textSize="@dimen/f11" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/dp10"
                                android:background="@drawable/sp_white_5"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="@dimen/dp10">

                                <ImageView
                                    android:layout_width="@dimen/dp52"
                                    android:layout_height="@dimen/dp52"
                                    android:src="@mipmap/pic_test" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp10"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="精神压力测试"
                                        android:textColor="@color/black_33"
                                        android:textSize="@dimen/f13" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="20道题目有效测试您的精神压力状态"
                                        android:textColor="@color/gray_99"
                                        android:textSize="@dimen/f11" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/sp_white_5"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="@dimen/dp10">

                                <ImageView
                                    android:layout_width="@dimen/dp52"
                                    android:layout_height="@dimen/dp52"
                                    android:src="@mipmap/pic_test" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp10"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="精神压力测试"
                                        android:textColor="@color/black_33"
                                        android:textSize="@dimen/f13" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="20道题目有效测试您的精神压力状态"
                                        android:textColor="@color/gray_99"
                                        android:textSize="@dimen/f11" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>


                    </android.support.constraint.ConstraintLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lNew"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@color/white"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lTest">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp12"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp9"
                            android:layout_height="@dimen/dp18"
                            android:src="@drawable/sp_green_9_l" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp8"
                            android:drawableLeft="@drawable/sp_green_9_l"
                            android:text="热文推荐"
                            android:textColor="@color/black_33"
                            android:textSize="@dimen/f15"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvMoreNews"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/dp12"
                                android:drawableRight="@mipmap/ic_right_tag"
