<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dp14"
            android:text="取消"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/f15" />

        <TextView
            android:id="@+id/tv_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:padding="@dimen/dp14"
            android:text="确定"
            android:textColor="@color/black"
            android:textSize="@dimen/f15" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp14">

        <com.wuhanzihai.rbk.ruibeikang.widgets.DatePickerView
            android:id="@+id/year_pv"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp160"
            android:layout_weight="3" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="年"
            android:textColor="@color/black_33"
            android:textSize="@dimen/f18" />

        <com.wuhanzihai.rbk.ruibeikang.widgets.DatePickerView
            android:id="@+id/month_pv"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp160"
            android:layout_weight="2" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="月"
            android:textColor="@color/black_33"
            android:textSize="@dimen/f18" />

        <com.wuhanzihai.rbk.ruibeikang.widgets.DatePickerView
            android:id="@+id/day_pv"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp160"
            android:layout_weight="2" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="日"
            android:textColor="@color/black_33"
            android:textSize="@dimen/f18" />

        <com.wuhanzihai.rbk.ruibeikang.widgets.DatePickerView
            android:id="@+id/hour_pv"
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_height="@dimen/dp160"
            android:layout_weight="2" />

        <TextView
            android:id="@+id/hour_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="gone"
            android:text="时"
            android:textColor="@color/black_33"
            android:textSize="@dimen/f18" />

        <com.wuhanzihai.rbk.ruibeikang.widgets.DatePickerView
            android:id="@+id/minute_pv"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp160"
            android:layout_weight="2" />

        <TextView
            android:id="@+id/minute_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="分"
            android:visibility="gone"
            android:textColor="@color/black_33"
            android:textSize="@dimen/f18" />

    </LinearLayout>


</LinearLayout>