<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sp_white_5"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp38">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_lanya" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:text="智能蓝牙血压计"
        android:textColor="@color/gray_66"
        android:textSize="@dimen/f11" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp51">

        <com.hhjt.baselibrary.widgets.WaterView
            android:layout_width="@dimen/dp160"
            android:layout_height="@dimen/dp160"
            app:centerColor="#01C5AC"
            app:ringNum="3"
            app:ringRatio="0.79"
            app:spreadColor="#01C5AC" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableTop="@mipmap/chazhao_icon"
            android:drawablePadding="@dimen/dp5"
            android:gravity="center"
            android:text="查找中..."
            android:textColor="@color/white" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp70"
        android:background="@drawable/sp_button_bt"
        android:gravity="center"
        android:padding="@dimen/dp17"
        android:text="取消连接"
        android:textColor="@color/white"
        android:textSize="@dimen/f15" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </LinearLayout>


</LinearLayout>