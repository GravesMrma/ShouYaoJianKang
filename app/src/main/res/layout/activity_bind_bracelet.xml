<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.wuhanzihai.rbk.ruibeikang.activity.BindBraceletActivity">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp100"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在搜索"
            android:textColor="@color/black_33"
            android:textSize="@dimen/f17"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:text="请将手环贴近手机"
            android:textColor="@color/gray_99"
            android:textSize="@dimen/f13"/>

    </LinearLayout>

    <com.hhjt.baselibrary.widgets.WaterView
        android:layout_width="@dimen/dp162"
        android:layout_height="@dimen/dp162"
        android:layout_centerInParent="true"
        app:centerColor="#4AC856"
        app:spreadColor="#9AED8C"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_water_center"/>

    <TextView
        android:id="@+id/tvCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp30"
        android:paddingLeft="@dimen/dp20"
        android:paddingRight="@dimen/dp20"
        android:paddingTop="@dimen/dp10"
        android:paddingBottom="@dimen/dp10"
        android:text="暂不绑定"
        android:textColor="@color/gray_99"
        android:textSize="@dimen/f12"/>

    <TextView
        android:id="@+id/tvReScan"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp30"
        android:layout_above="@id/tvCancel"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/dp10"
        android:layout_centerHorizontal="true"
        android:paddingLeft="@dimen/dp20"
        android:paddingRight="@dimen/dp20"
        android:gravity="center"
        android:background="@drawable/sp_orange_10"
        android:text="重新搜索"
        android:textColor="@color/white"
        android:textSize="@dimen/f12"/>

</RelativeLayout>
