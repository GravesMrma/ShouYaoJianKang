<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/dp10"
    android:paddingLeft="@dimen/dp10"
    android:paddingBottom="@dimen/dp10"
    android:paddingTop="@dimen/dp10"
    android:background="@drawable/sp_white_10">

    <ImageView
        android:id="@+id/ivImg"
        android:layout_width="@dimen/dp28"
        android:layout_height="@dimen/dp28"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="疾病治疗"
        app:layout_constraintTop_toTopOf="@id/ivImg"
        app:layout_constraintBottom_toBottomOf="@id/ivImg"
        app:layout_constraintLeft_toRightOf="@id/ivImg"
        android:layout_marginLeft="@dimen/dp10"
        android:textColor="@color/black_33"
        android:textSize="@dimen/f12"/>

    <TextView
        android:id="@+id/tvState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ivImg"
        app:layout_constraintBottom_toBottomOf="@id/ivImg"
        app:layout_constraintRight_toRightOf="parent"
        android:text="等待买家付款"
        android:textSize="@dimen/f12"/>

    <View
        android:id="@+id/vLine"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="@color/line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivImg"
        android:layout_marginTop="@dimen/dp10"/>


    <TextView
        android:id="@+id/tvText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black_33"
        android:textSize="@dimen/f12"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/dp10"
        app:layout_constraintTop_toBottomOf="@id/vLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tvText1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_66"
        android:textSize="@dimen/f11"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/dp8"
        app:layout_constraintTop_toBottomOf="@id/tvText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tvText2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_66"
        android:textSize="@dimen/f11"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/tvText1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:id="@+id/vLine1"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="@color/line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvText2"
        android:layout_marginTop="@dimen/dp10"/>

    <TextView
        android:id="@+id/tvBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vLine1"
        android:layout_marginTop="@dimen/dp10"
        android:minHeight="@dimen/dp28"
        android:minWidth="@dimen/dp96"
        android:gravity="center"
        android:text="去支付"
        android:textSize="@dimen/f12"
        android:textColor="@color/white"/>

</android.support.constraint.ConstraintLayout>