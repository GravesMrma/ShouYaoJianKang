<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp8"
        android:paddingRight="@dimen/dp8"
        android:paddingTop="@dimen/dp6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tvText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ivImg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="@dimen/f11"
        android:textColor="@color/black_33"
        android:layout_marginTop="@dimen/dp9"/>

    <TextView
        android:id="@+id/tvTag"
        android:layout_width="@dimen/dp14"
        android:layout_height="@dimen/dp14"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/ivImg"
        app:layout_constraintRight_toRightOf="@id/ivImg"
        android:background="@drawable/sp_red_order_ring"
        android:textColor="@color/white"
        android:textSize="@dimen/f10"
        android:gravity="center"
        android:text="12"/>


</android.support.constraint.ConstraintLayout>