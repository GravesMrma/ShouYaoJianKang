<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp72"
    android:background="@drawable/sp_white_5"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp33"
        android:gravity="center"
        android:text="该订单有商品售罄是否继续购买？"
        android:textColor="@color/black_33"
        android:textSize="@dimen/f14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp37"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我再想想"
            android:textColor="@color/gray_99"
            android:textSize="@dimen/f12" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/sp_dialog_right"
            android:gravity="center"
            android:text="加入购物车"
            android:textColor="@color/white"
            android:textSize="@dimen/f12" />

    </LinearLayout>

</LinearLayout>