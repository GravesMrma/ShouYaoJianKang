<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp12"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/ivImg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="@dimen/dp79"
        android:layout_height="@dimen/dp87"
        app:roundTopLeft="true"
        app:roundTopRight="true"
        app:roundBottomLeft="true"
        app:roundBottomRight="true"
        app:roundedCornerRadius="@dimen/dp5"
        android:background="@color/gray_66"/>

    <TextView
        android:id="@+id/tvName"
        app:layout_constraintTop_toTopOf="@id/ivImg"
        app:layout_constraintLeft_toRightOf="@id/ivImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:drawableRight="@mipmap/ic_dietitian_tag"
        android:drawablePadding="@dimen/dp3"
        android:layout_marginLeft="@dimen/dp14"
        android:text="三分毒"
        android:textColor="@color/black_33"
        android:textSize="@dimen/f15"/>

    <TextView
        android:id="@+id/tvTag"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        app:layout_constraintLeft_toLeftOf="@id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp3"
        android:gravity="bottom"
        android:drawableRight="@mipmap/ic_dietitian_tag"
        android:drawablePadding="@dimen/dp3"
        android:text="国家公共营养师"
        android:textColor="@color/gray_66"
        android:textSize="@dimen/f13"/>

    <TextView
        android:id="@+id/tvReadNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/ivImg"
        app:layout_constraintLeft_toRightOf="@id/ivImg"
        android:layout_marginLeft="@dimen/dp14"
        android:layout_marginBottom="@dimen/dp10"
        android:text="12700"
        android:textSize="@dimen/f11"
        android:textColor="@color/green_08"/>

    <TextView
        android:id="@+id/tvRead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/tvReadNum"
        app:layout_constraintLeft_toRightOf="@id/tvReadNum"
        android:text="咨询次数"
        android:layout_marginLeft="@dimen/dp2"
        android:textSize="@dimen/f11"
        android:textColor="@color/gray_66"/>

    <TextView
        android:id="@+id/tvJudgeNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp20"
        app:layout_constraintBottom_toBottomOf="@id/tvReadNum"
        app:layout_constraintLeft_toRightOf="@id/tvRead"
        android:text="12700"
        android:textSize="@dimen/f11"
        android:textColor="@color/green_08"/>

    <TextView
        android:id="@+id/tvJudge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/tvReadNum"
        app:layout_constraintLeft_toRightOf="@id/tvJudgeNum"
        android:text="好评率"
        android:layout_marginLeft="@dimen/dp2"
        android:textSize="@dimen/f11"
        android:textColor="@color/gray_66"/>

    <TextView
        android:layout_width="@dimen/dp58"
        android:layout_height="@dimen/dp25"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/ivImg"
        android:layout_marginBottom="@dimen/dp7"
        android:text="咨询"
        android:gravity="center"
        android:textSize="@dimen/f12"
        android:textColor="@color/white"
        android:background="@drawable/sp_green_12"/>

</android.support.constraint.ConstraintLayout>