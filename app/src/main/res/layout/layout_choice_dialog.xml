<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp40"
        android:layout_marginRight="@dimen/dp40"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp30"
        android:paddingBottom="@dimen/dp10"
        android:paddingLeft="@dimen/dp19"
        android:paddingRight="@dimen/dp19"
        android:background="@drawable/sp_white_5">

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/f17"
            android:textColor="@color/black_33"
            android:minLines="3"
            android:text="是否确认删除此内容"
            android:gravity="center|top"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp38"
                android:text="取消"
                android:gravity="center"
                android:textSize="@dimen/f17"
                android:background="@drawable/sp_gary_5"
                android:textColor="@color/black_33"/>

            <Space
                android:layout_width="@dimen/dp10"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvSure"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp38"
                android:text="确认"
                android:gravity="center"
                android:textSize="@dimen/f17"
                android:background="@drawable/sp_orange_5"
                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>