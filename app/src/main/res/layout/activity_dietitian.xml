<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.wuhanzihai.rbk.ruibeikang.activity.DietitianActivity">

    <com.hhjt.baselibrary.widgets.TemplateTitle
        android:id="@+id/tvBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:canBack="true"
        app:titleText="健康咨询"
        app:moreImg="@drawable/ic_share"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/ivImg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintDimensionRatio="1.967"
        android:background="@color/gray_66"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cdView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp160"
        android:layout_marginLeft="@dimen/dp12"
        android:layout_marginRight="@dimen/dp12"
        app:layout_constraintTop_toBottomOf="@id/tvBar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:cardElevation="@dimen/dp5"
        app:cardCornerRadius="@dimen/dp5"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintDimensionRatio="3.62">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6"
                        android:textColor="@color/green_08"
                        android:textSize="@dimen/f26"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="持证年限"
                        android:textColor="@color/gray_66"
                        android:textSize="@dimen/f12"/>

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="@dimen/dp1"
                android:layout_height="@dimen/dp45"
                android:background="@color/line"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="60"
                        android:textColor="@color/green_08"
                        android:textSize="@dimen/f26"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="服务人员"
                        android:textColor="@color/gray_66"
                        android:textSize="@dimen/f12"/>

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="@dimen/dp1"
                android:layout_height="@dimen/dp45"
                android:background="@color/line"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textColor="@color/green_08"
                        android:textSize="@dimen/f26"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="好评率"
                        android:textColor="@color/gray_66"
                        android:textSize="@dimen/f12"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tvText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp30"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cdView"
        android:layout_marginLeft="@dimen/dp21"
        android:text="营养师介绍"
        android:textStyle="bold"
        android:textColor="@color/black_33"
        android:textSize="@dimen/f15"/>

    <LinearLayout
        android:id="@+id/lTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvText"
        android:layout_marginTop="@dimen/dp14"
        android:layout_marginLeft="@dimen/dp21"
        android:layout_marginRight="@dimen/dp21"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="国家公共营养师"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/f11"
            android:gravity="center"
            android:drawableLeft="@mipmap/ic_check"
            android:drawablePadding="@dimen/dp5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:text="营养认证博主"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/f11"
            android:gravity="center"
            android:drawableLeft="@mipmap/ic_check"
            android:drawablePadding="@dimen/dp5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="营养超话主持人"
            android:layout_marginLeft="@dimen/dp10"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/f11"
            android:gravity="center"
            android:drawableLeft="@mipmap/ic_check"
            android:drawablePadding="@dimen/dp5"/>

    </LinearLayout>

    <View
        android:id="@+id/vView"
        app:layout_constraintTop_toBottomOf="@id/lTag"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginTop="@dimen/dp14"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/line"/>

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/vView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="@dimen/dp19"
        android:textSize="@dimen/f12"
        android:textColor="@color/gray_66"
        android:lineSpacingExtra="@dimen/dp5"
        android:text="从事营养学10余年，擅长营养早餐搭配，针对不同身体状况有独到的饮食方案，一对一制定专业食谱，建立科学的饮食习惯。"/>

    <TextView
        android:id="@+id/tvCall"
        android:layout_width="@dimen/dp184"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp19"
        style="@style/buttonStyleRound"
        android:text="立即咨询"/>


</android.support.constraint.ConstraintLayout>
