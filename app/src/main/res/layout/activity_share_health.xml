<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.ShareHealthActivity">

    <View
        android:id="@+id/fake_status_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/statusbar_view_height"
        android:background="@color/white" />

    <com.hhjt.baselibrary.widgets.TemplateTitle
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:canBack="true"
        app:titleText="分享健康赚好礼" />

    <LinearLayout
        android:id="@+id/llView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btCommit1"
            style="@style/buttonStyleRoundStk"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp38"
            android:layout_margin="@dimen/dp14"
            android:text="已分享，去领券" />

        <TextView
            android:id="@+id/btCommit"
            style="@style/buttonStyleRound"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp38"
            android:layout_margin="@dimen/dp14"
            android:text="立即分享" />

    </LinearLayout>

</LinearLayout>