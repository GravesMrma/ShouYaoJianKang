<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.wuhanzihai.rbk.ruibeikang.widgets.MarqueeTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFECCC"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:paddingLeft="@dimen/dp14"
        android:paddingTop="@dimen/dp8"
        android:paddingRight="@dimen/dp14"
        android:paddingBottom="@dimen/dp8"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="根据国家《网络安全法》规定，用户手机、详细购物信息等相关隐私禁止向第三方透露，敬请谅解"
        android:textColor="@color/orange" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp14"
        android:background="@drawable/sp_white_5"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/dp20">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_record_head" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:text="您的身份:"
                android:textColor="@color/green_08"
                android:textSize="@dimen/f17" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:text="联合创始人"
                android:textColor="@color/gray_99"
                android:textSize="@dimen/f17" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp18">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="直推返利比例:"
                    android:textColor="@color/green_08"
                    android:textSize="@dimen/f13" />

                <TextView
                    android:id="@+id/rvRule1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21%"
                    android:textColor="@color/gray_99"
                    android:textSize="@dimen/f13" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="间推返利比例:"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/f13" />

                <TextView
                    android:id="@+id/rvRule2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18%"
                    android:textColor="@color/gray_99"
                    android:textSize="@dimen/f13" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>