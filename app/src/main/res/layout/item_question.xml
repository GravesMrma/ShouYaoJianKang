<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingRight="@dimen/dp14">

    <ImageView
        android:id="@+id/ivImg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvText"
        app:layout_constraintHorizontal_weight="106"
        app:layout_constraintDimensionRatio="1.34"
        android:background="@color/red"
        android:layout_margin="@dimen/dp14"/>

    <TextView
        android:id="@+id/tvText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="210"
        app:layout_constraintTop_toTopOf="@id/ivImg"
        app:layout_constraintLeft_toRightOf="@id/ivImg"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingTop="@dimen/dp2"
        android:textSize="@dimen/f15"
        android:textColor="@color/black_33"
        android:text="心里自测"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/tvText1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvText"
        app:layout_constraintLeft_toRightOf="@id/ivImg"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp4"
        android:layout_marginLeft="@dimen/dp14"
        android:textColor="@color/gray_99"
        android:textSize="@dimen/f11"
        android:text="预约陪诊与挂号成功不等同，以挂号成功信息为主。预约陪诊与挂号成功不等同，以挂号成功信息为主。"
        android:maxLines="2"
        android:ellipsize="end"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12345人参与"
        android:textSize="@dimen/f11"
        android:textColor="@color/green_08"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/ivImg"/>


</android.support.constraint.ConstraintLayout>