<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.OrderDetailActivity">

    <View
        android:id="@+id/fake_status_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/statusbar_view_height"
        android:background="@color/white" />

    <com.hhjt.baselibrary.widgets.TemplateTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:canBack="true"
        app:titleText="订单详情" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/clBg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/green_08"
                android:padding="@dimen/dp12">

                <TextView
                    android:id="@+id/tvText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp60"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/f15"
                    app:layout_constraintBottom_toTopOf="@id/tvText1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp60"
                    android:textColor="@color/white"
                    android:textSize="@dimen/f12"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvText" />

                <ImageView
                    android:id="@+id/ivState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp30"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/clAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dp14"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/f12"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp50"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/f12"
                    app:layout_constraintBottom_toBottomOf="@id/tvName"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <TextView
                    android:id="@+id/tvTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sp_green_7"
                    android:layout_marginLeft="@dimen/dp10"
                    android:gravity="center"
                    android:minWidth="@dimen/dp30"
                    android:minHeight="@dimen/dp14"
                    android:text="默认"
                    android:textColor="@color/white"
                    android:visibility="invisible"
                    android:textSize="@dimen/f10"
                    app:layout_constraintBottom_toBottomOf="@id/tvName"
                    app:layout_constraintLeft_toRightOf="@id/tvPhone"/>

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:lineSpacingExtra="@dimen/dp1"
                    android:lines="2"
                    android:paddingRight="@dimen/dp10"
                    android:textColor="@color/gray_99"
                    android:layout_marginRight="@dimen/dp30"
                    android:textSize="@dimen/f11"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvName" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_more"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </android.support.constraint.ConstraintLayout>

            <include layout="@layout/item_line" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp14"
                android:background="@color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp14"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/dp14">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单编号:"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/f11" />

                    <TextView
                        android:id="@+id/tvOrderSn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp30"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/f11" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单时间:"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/f11" />

                    <TextView
                        android:id="@+id/tvOrderTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp30"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/f11" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_marginTop="@dimen/dp14"
                    android:layout_marginBottom="@dimen/dp14"
                    android:background="@color/main_bg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="健康币:"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/f11" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="健"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/f11"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/tvOrderQB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp30"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/f11" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付方式:"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/f11" />

                    <TextView
                        android:id="@+id/tvOrderPay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp30"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/f11" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="配送方式:"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/f11" />

                    <TextView
                        android:id="@+id/tvOrderWay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp30"
                        android:text=""
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/f11" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_marginTop="@dimen/dp14"
                    android:layout_marginBottom="@dimen/dp14"
                    android:background="@color/main_bg" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商品总额:"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/f11" />

                    <TextView
                        android:id="@+id/tvOrderMoeny"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/f11" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="运费:"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/f11" />

                    <TextView
                        android:id="@+id/tvOrderKdMoeny"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="325385676786"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/f11" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_marginTop="@dimen/dp14"
                    android:layout_marginBottom="@dimen/dp14"
                    android:background="@color/main_bg" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp40"
                        android:text="实付金额:"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/f13"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp14"
                        android:paddingBottom="@dimen/dp2"
                        android:text="@string/rmb"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/f11" />

                    <TextView
                        android:id="@+id/tvMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/f17" />


                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp10"
        android:gravity="right"
        android:orientation="horizontal"
        android:background="@color/white">

        <TextView
            android:id="@+id/tvOrderLeftP"
            android:layout_width="@dimen/dp96"
            android:layout_height="@dimen/dp28"
            android:gravity="center"
            android:visibility="invisible"
            android:layout_marginRight="@dimen/dp14"
            android:background="@drawable/sp_gray_14_stk"
            android:text="申请退款"
            android:textColor="@color/gray_99"
            android:textSize="@dimen/f12"/>

        <TextView
            android:id="@+id/tvOrderLeft"
            android:layout_width="@dimen/dp96"
            android:layout_height="@dimen/dp28"
            android:gravity="center"
            android:background="@drawable/sp_gray_14_stk"
            android:text="申请退款"
            android:textColor="@color/gray_99"
            android:textSize="@dimen/f12"/>

        <TextView
            android:id="@+id/tvOrderRight"
            android:layout_width="@dimen/dp96"
            android:layout_height="@dimen/dp28"
            android:layout_marginLeft="@dimen/dp14"
            android:layout_marginRight="@dimen/dp14"
            android:gravity="center"
            android:background="@drawable/sp_gray_14_stk"
            android:text="提醒发货"
            android:textColor="@color/gray_99"
            android:textSize="@dimen/f12"/>
    </LinearLayout>
</LinearLayout>