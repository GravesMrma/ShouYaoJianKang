<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".activity.PayResultActivity">

    <View
        android:id="@+id/fake_status_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/statusbar_view_height"
        android:background="@color/white" />

    <com.hhjt.baselibrary.widgets.TemplateTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:canBack="true"
        app:titleText="下单成功" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#19C7AF"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp21"
        android:paddingBottom="@dimen/dp24">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_pay_result" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:text="您已完成下单，如有疑问请咨询客服！"
            android:textColor="@color/white"
            android:textSize="@dimen/f11" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp14"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sp_white_14"
                android:gravity="center"
                android:minWidth="@dimen/dp84"
                android:minHeight="@dimen/dp28"
                android:text="返回商城"
                android:textColor="#19C7AF"
                android:textSize="@dimen/f12" />

            <TextView
                android:id="@+id/tvCommit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp37"
                android:background="@drawable/sp_white_14"
                android:gravity="center"
                android:minWidth="@dimen/dp84"
                android:minHeight="@dimen/dp28"
                android:text="查看订单"
                android:textColor="#19C7AF"
                android:textSize="@dimen/f12" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <View
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp1"
            android:background="#D7D7D7"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp25"
            android:text="猜你喜欢"
            android:textColor="@color/black_33"
            android:textSize="@dimen/f16"/>

        <View
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp1"
            android:background="#D7D7D7"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>