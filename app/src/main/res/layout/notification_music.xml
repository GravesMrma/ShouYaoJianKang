<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/ivImg"
        android:layout_width="@dimen/dp92"
        android:layout_height="@dimen/dp92"
        android:src="@mipmap/noty_music"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp14"
        android:layout_marginTop="@dimen/dp14"
        android:layout_marginRight="@dimen/dp14"
        android:layout_toRightOf="@id/ivImg"
        android:textColor="@color/black_33"
        android:textSize="@dimen/f15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ivImg"
        android:layout_marginLeft="@dimen/dp14"
        android:layout_marginRight="@dimen/dp14"
        android:layout_marginBottom="@dimen/dp10"
        android:layout_toRightOf="@id/ivImg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivLast"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:scaleType="center"
            android:src="@mipmap/yy_foot_zuo_icon" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp30"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/ivPlay"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:scaleType="center"
            android:src="@mipmap/ic_zanting" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp30"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/ivNext"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:scaleType="center"
            android:src="@mipmap/yy_foot_you_icon" />

    </LinearLayout>

</RelativeLayout>