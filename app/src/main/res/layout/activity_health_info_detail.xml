<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wuhanzihai.rbk.ruibeikang.activity.HealthInfoDetailActivity">


    <LinearLayout
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp49"
        android:background="@color/white"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/dp40"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:padding="@dimen/dp10"
            android:src="@mipmap/ic_back_ring"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp24"
            android:paddingLeft="@dimen/dp14"
            android:paddingRight="@dimen/dp14"
            android:gravity="center_vertical|start"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp4"
            android:layout_marginBottom="@dimen/dp4"
            android:paddingTop="@dimen/dp4"
            android:paddingBottom="@dimen/dp4"
            android:hint="看了这么多,可能你有话想"
            android:maxLines="3"
            android:ellipsize="end"
            android:textSize="@dimen/f12"
            android:textColorHint="@color/black_33_c5"
            android:textColor="@color/black_33"
            android:background="@drawable/sp_gary_12"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp40"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:padding="@dimen/dp10"
                android:src="@mipmap/ic_judge"/>

            <ImageView
                android:layout_width="@dimen/dp40"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:padding="@dimen/dp10"
                android:src="@mipmap/ic_share"/>

            <ImageView
                android:layout_width="@dimen/dp40"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:padding="@dimen/dp10"
                android:src="@mipmap/ic_colloect"/>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
