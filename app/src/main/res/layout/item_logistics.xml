<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/tvText"
        android:layout_width="0dp"
        android:layout_marginLeft="@dimen/dp72"
        android:textColor="@color/gray_66"
        android:layout_marginRight="@dimen/dp20"
        android:lineSpacingExtra="@dimen/dp10"
        android:text="【武汉市】 顺丰快递   东西湖分部   正在配送中 正在配送中"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp17"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="@dimen/f13"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tvTime"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/dp10"
        android:textColor="@color/gray_66"
        android:textSize="@dimen/f13"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvText"
        app:layout_constraintLeft_toLeftOf="@id/tvText"
        app:layout_constraintRight_toRightOf="@id/tvText"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp17"/>

    <ImageView
        android:id="@+id/ivRing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tvText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvText"
        android:src="@drawable/sp_green_12_ring"/>

    <View
        android:id="@+id/vLine1"
        android:layout_width="@dimen/dp2"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/ivRing"
        app:layout_constraintLeft_toLeftOf="@id/ivRing"
        app:layout_constraintRight_toRightOf="@id/ivRing"
        android:background="@color/green_08"/>

    <View
        android:id="@+id/vLine2"
        android:layout_width="@dimen/dp2"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/ivRing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/ivRing"
        app:layout_constraintRight_toRightOf="@id/ivRing"
        android:background="@color/green_08"/>


</android.support.constraint.ConstraintLayout>