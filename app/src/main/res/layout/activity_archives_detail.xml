<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ArchivesDetailActivity">

    <View
        android:id="@+id/fake_status_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/statusbar_view_height"
        android:background="@color/white" />

    <com.hhjt.baselibrary.widgets.TemplateTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:canBack="true"
        app:titleText="健康档案" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dp13"
                android:text="以下内容为必选项" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rlGuanxi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp14">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="与您的关系"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/f13" />

                    <TextView
                        android:id="@+id/tvGuanxi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:drawableRight="@mipmap/ic_more_gray"
                        android:drawablePadding="@dimen/dp10"
                        android:gravity="right"
                        android:hint="与您的关系"
                        android:textColor="@color/black_33"
                        android:textColorHint="@color/gray_99"
                        android:textSize="@dimen/f13" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dp14"
                    android:layout_marginRight="@dimen/dp14"
                    android:background="@color/line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp14">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓名"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/f13" />

                    <EditText
                        android:id="@+id/edName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@color/clarity"
                        android:gravity="right"
                        android:lines="1"
                        android:minWidth="@dimen/dp100"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/f13" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dp14"
                    android:layout_marginRight="@dimen/dp14"
                    android:background="@color/line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp14">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="性别"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/f13" />


                    <RadioGroup
                        android:id="@+id/mRgRecord"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/mRbAll"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:button="@null"
                            android:checked="true"
                            android:drawableLeft="@drawable/selector_sex_check"
                            android:drawablePadding="@dimen/dp5"
                            android:gravity="center_vertical"
                            android:text="男"
                            android:textColor="@color/selector_attention_doctor"
                            android:textSize="@dimen/f15" />

                        <RadioButton
                            android:id="@+id/mRbDfk"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp15"
                            android:layout_weight="1"
                            android:button="@null"
                            android:drawableLeft="@drawable/selector_sex_check"
                            android:drawablePadding="@dimen/dp5"
                            android:gravity="center_vertical"
                            android:text="女"
                            android:textColor="@color/selector_attention_doctor"
                            android:textSize="@dimen/f15" />

                    </RadioGroup>


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dp14"
                    android:layout_marginRight="@dimen/dp14"
                    android:background="@color/line" />

                <RelativeLayout
                    android:id="@+id/rlBirthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp14">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="出生日期"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/f13" />

                    <TextView
                        android:id="@+id/tvBirthday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:drawableRight="@mipmap/ic_more_gray"
                        android:drawablePadding="@dimen/dp10"
                        android:text="1993-02-13"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/f13" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dp14"
                    android:layout_marginRight="@dimen/dp14"
                    android:background="@color/line" />

                <RelativeLayout
                    android:id="@+id/rlHeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp14">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身高"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/f13" />

                    <TextView
                        android:id="@+id/tvHeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:drawableRight="@mipmap/ic_more_gray"
                        android:drawablePadding="@dimen/dp10"
                        android:text="170cm"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/f13" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dp14"
                    android:layout_marginRight="@dimen/dp14"
                    android:background="@color/line" />

                <RelativeLayout
                    android:id="@+id/rlWeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp14">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="体重"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/f13" />

                    <TextView
                        android:id="@+id/tvWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:drawableRight="@mipmap/ic_more_gray"
                        android:drawablePadding="@dimen/dp10"
                        android:text="56Kg"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/f13" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dp14"
                    android:layout_marginRight="@dimen/dp14"
                    android:background="@color/line" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rlXiyan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp14">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="吸烟史"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/f13" />

                    <TextView
                        android:id="@+id/tvXiyan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:drawableRight="@mipmap/ic_more_gray"
                        android:drawablePadding="@dimen/dp10"
                        android:text="与您的关系"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/f13" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dp14"
                    android:layout_marginRight="@dimen/dp14"
                    android:background="@color/line" />

                <RelativeLayout
                    android:id="@+id/rvDrink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp14">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="饮酒史"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/f13" />

                    <TextView
                        android:id="@+id/tvDrink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:drawableRight="@mipmap/ic_more_gray"
                        android:drawablePadding="@dimen/dp10"
                        android:text="与您的关系"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/f13" />

                </RelativeLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dp13"
                android:text="以下内容为必选项" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/dp14">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="肝功能"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/f13" />

                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/tfView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    app:max_select="0" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="@dimen/dp14"
                    android:background="@color/line" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp14"
                    android:text="肾功能"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/f13" />

                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/tfView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    app:max_select="0" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="@dimen/dp14"
                    android:background="@color/line" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp14"
                    android:text="婚姻状况"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/f13" />

                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/tfView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    app:max_select="0" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="@dimen/dp14"
                    android:background="@color/line" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp14"
                    android:text="生育状态"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/f13" />

                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/tfView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    app:max_select="0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/dp14">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="慢性病"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/f13" />

                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/tfView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    app:max_select="0" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@color/clarity"
                    android:hint="点击输入补充内容..."
                    android:paddingTop="@dimen/dp8"
                    android:paddingBottom="@dimen/dp8"
                    android:textColor="@color/black_33"
                    android:textColorHint="@color/green_08"
                    android:textSize="@dimen/f11" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/dp14">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="家族病史"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/f13" />

                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/tfView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    app:max_select="0" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@color/clarity"
                    android:hint="点击输入补充内容..."
                    android:paddingTop="@dimen/dp8"
                    android:paddingBottom="@dimen/dp8"
                    android:textColor="@color/black_33"
                    android:textColorHint="@color/green_08"
                    android:textSize="@dimen/f11" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/dp14">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="药物过敏"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/f13" />

                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/tfView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    app:max_select="0" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@color/clarity"
                    android:hint="点击输入补充内容..."
                    android:paddingTop="@dimen/dp8"
                    android:paddingBottom="@dimen/dp8"
                    android:textColor="@color/black_33"
                    android:textColorHint="@color/green_08"
                    android:textSize="@dimen/f11" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/dp14">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="食物/接触物过敏"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/f13" />

                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/tfView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    app:max_select="0" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@color/clarity"
                    android:hint="点击输入补充内容..."
                    android:paddingTop="@dimen/dp8"
                    android:paddingBottom="@dimen/dp8"
                    android:textColor="@color/black_33"
                    android:textColorHint="@color/green_08"
                    android:textSize="@dimen/f11" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/dp14">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人习惯"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/f13" />

                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/tfView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    app:max_select="0" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@color/clarity"
                    android:hint="点击输入补充内容..."
                    android:paddingTop="@dimen/dp8"
                    android:paddingBottom="@dimen/dp8"
                    android:textColor="@color/black_33"
                    android:textColorHint="@color/green_08"
                    android:textSize="@dimen/f11" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>